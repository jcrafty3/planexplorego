<h1>Listing posts</h1>

<table>
  <tr>
    <th>Event</th>
    <th>Owner</th>
    <th>Category</th>
    <th>Eventdate</th>
    <th>Eventtime</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.event %></td>
    <td><%= post.owner %></td>
    <td><%= post.category %></td>
    <td><%= post.eventDate %></td>
    <td><%= post.eventTime %></td>
    <td><%= post.location %></td>
    <td><%= post.description %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

